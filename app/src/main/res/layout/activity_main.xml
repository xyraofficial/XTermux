<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ios_background"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/ios_text_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:text="Termux Toolbox"
            style="@style/IOSTextTitle" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar Simulation -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E5E5EA">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_ios_info"
                        android:tint="#8E8E93"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search commands..."
                        android:layout_marginStart="8dp"
                        android:textColor="#8E8E93"
                        android:textSize="14sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESSENTIAL TOOLS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/ios_gray"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>

            <!-- Toolbox Menu Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">
                <!-- ... (existing cards) ... -->

                <!-- Info Item -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ios_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">
                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_ios_info"
                            android:tint="@color/ios_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Source Info"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/ios_text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Package Item -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_package"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ios_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">
                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_ios_package"
                            android:tint="@color/ios_orange"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pkg Search"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/ios_text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Setup Item -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_setup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ios_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">
                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_ios_setup"
                            android:tint="@color/ios_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Setup Guide"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/ios_text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Storage Item -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_storage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ios_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">
                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_ios_info"
                            android:tint="@color/ios_green"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Storage"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/ios_text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Network Item -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_network"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ios_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">
                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_ios_setup"
                            android:tint="@color/ios_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Network"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/ios_text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- System Item -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_system"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ios_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">
                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_ios_info"
                            android:tint="@color/ios_orange"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System Info"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/ios_text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Feature Content Display -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:id="@+id/feature_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/feature_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select a feature"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/ios_blue"/>
                    <TextView
                        android:id="@+id/feature_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tap an icon above to see details."
                        android:textColor="@color/ios_text_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>